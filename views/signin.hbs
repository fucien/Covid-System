
<body id="body">
  <div id="form-container" class="card p-5" style="width: 35em; height: 30em; background:rgba(255, 255, 255, 0.575);">
    <div id="title" style="color: #e74255">
       <p>Đăng nhập</p> 
    </div>
    {{#if msg}}
        <div class="alert alert-warning" role="alert">
          {{msg}}
        </div>
      {{/if}}
    <form class="form-signin" method="post" action="/auth/signin">
      <div class="input-group">
        <label for="username" class="sr-only">
          Tài khoản
        </label>
        <input id="username" name="username" class="form-control " placeholder="Tên đăng nhập" required=""
          autofocus="" />
      </div>
      <div class="input-group">
        <label for="password" class="sr-only">
        Mật khẩu
        </label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Mật khẩu"
          required="" />
      </div >
      <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="on" name="keep" />
          Giữ trạng thái đăng nhập
        </label>
      </div>
      <button class="btn btn-lg btn-danger btn-block" type="submit">
        Đăng nhập
      </button>
    </form>
    
  </div>
</body>